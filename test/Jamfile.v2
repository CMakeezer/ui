project
    : requirements
        <library>/boost/ui//boost_ui
    ;

    test-suite "ui" :
        [ run cache_test.cpp ]
        [ run color_test.cpp ]
        [ run coord_test.cpp ]
        [ run coord_geometry_test.cpp ]
        [ run coord_polygon_test.cpp ]
        [ run datetime_test.cpp /boost/chrono//boost_chrono ]
        [ run font_test.cpp ]
        [ run image_test.cpp : : ../example/res/boost.ico ]
        [ run log_test.cpp ]
        [ run stream_test.cpp ]
        [ run string_test.cpp ]
        [ run widget_test.cpp ]
        ;
